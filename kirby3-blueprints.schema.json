{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "https://getkirby.com/blueprints/page.schema.json",
  "title": "JSON schema for Kirby 3 CMS blueprint files",
  "allOf": [
    {
      "type": "object",
      "properties": {
        "title": {
          "$ref": "#/definitions/stringOrTranslated"
        },
        "description": {
          "$ref": "#/definitions/stringOrTranslated"
        },
        "num": {
          "$ref": "#/definitions/nonEmptyString",
          "default": "zero"
        },
        "status": {
          "type": "object",
          "properties": {
            "draft": { "$ref": "#/definitions/stringOrLabelAndText" },
            "unlisted": { "$ref": "#/definitions/stringOrLabelAndText" },
            "listed": { "$ref": "#/definitions/stringOrLabelAndText" }
          }
        },
        "icon": {
          "$ref": "#/definitions/nonEmptyString"},
        "image": {
          "type": "object",
          "properties": {
            "back": {
              "$ref": "#/definitions/nonEmptyString"
            },
            "icon": {
              "$ref": "#/definitions/nonEmptyString"
            }
          }
        },
        "options": {
          "type": "object",
          "properties": {
            "changeSlug": {
              "$ref": "#/definitions/booleanOrObject"
            },
            "changeStatus": {
              "$ref": "#/definitions/booleanOrObject"
            },
            "changeTemplate": {
              "$ref": "#/definitions/booleanOrStringArrayUnique"
            },
            "changeTitle": {
              "$ref": "#/definitions/booleanOrObject"
            },
            "delete": {
              "$ref": "#/definitions/booleanOrObject"
            },
            "duplicate": {
              "$ref": "#/definitions/booleanOrObject"
            },
            "preview": {
              "$ref": "#/definitions/booleanOrString"
            },
            "read": {
              "$ref": "#/definitions/booleanOrObject"
            },
            "update": {
              "$ref": "#/definitions/booleanOrObject"
            },
            "changeName": {
              "$ref": "#/definitions/booleanOrObject"
            },
            "replace": {
              "$ref": "#/definitions/booleanOrObject"
            }
          }
        },
        "navigation": {
          "type": "object",
          "properties": {
            "status": {
              "$ref": "#/definitions/stringOrStringArrayUnique"
            },
            "template": {
              "$ref": "#/definitions/stringOrStringArrayUnique"
            },
            "sortBy": {
              "$ref": "#/definitions/stringOrStringArrayUnique"
            }
          }
        },
        "accept": {
          "oneOf": [
            {
              "$ref": "#/definitions/nonEmptyString"
            },
            {
              "type": "object",
              "properties": {
                "extension": {
                  "$ref": "#/definitions/stringOrStringArrayUnique"
                },
                "mime ": {
                  "$ref": "#/definitions/stringOrStringArrayUnique"
                },
                "maxheight": {
                  "$ref": "#/definitions/numberInPixel"
                },
                "maxsize": {
                  "$ref": "#/definitions/numberInBytes"
                },
                "maxwidth": {
                  "$ref": "#/definitions/numberInPixel"
                },
                "minheight": {
                  "$ref": "#/definitions/numberInPixel"
                },
                "minsize": {
                  "$ref": "#/definitions/numberInBytes"
                },
                "minwidth": {
                  "$ref": "#/definitions/numberInPixel"
                },
                "orientation": {
                  "$ref": "#/definitions/nonEmptyString"
                },
                "type": {
                  "$ref": "#/definitions/stringOrStringArrayUnique"
                }
              }
            }
          ]
        }
      }
    }
  ],
  "definitions": {
    "nonEmptyString": {
      "type": "string",
      "minLength": 1
    },
    "notRequiredNonEmptyString": {
      "oneOf": [
        {
          "$ref": "#/definitions/nonEmptyString"
        },
        {
          "type": "null"
        }
      ]
    },
    "stringArrayUnique": {
      "type": "array",
      "uniqueItems": true,
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/nonEmptyString"
      }
    },
    "stringOrStringArrayUnique": {
      "oneOf": [
        {
          "$ref": "#/definitions/nonEmptyString"
        },
        {
          "$ref": "#/definitions/stringArrayUnique"
        }
      ]
    },
    "booleanOrString": {
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "type": "string"
        }
      ]
    },
    "booleanOrObject": {
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "type": "object"
        }
      ]
    },
    "booleanOrStringArrayUnique": {
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "$ref": "#/definitions/stringArrayUnique"
        }
      ]
    },
    "stringOrNumber": {
      "oneOf": [
        {
          "$ref": "#/definitions/nonEmptyString"
        },
        {
          "type": "number"
        }
      ]
    },
    "translated": {
      "type": "object",
      "properties": {
        "en": { "$ref": "#/definitions/nonEmptyString" },
        "de": { "$ref": "#/definitions/nonEmptyString" }
      }
    },
    "stringOrTranslated": {
      "oneOf": [
        {
          "$ref": "#/definitions/nonEmptyString"
        },
        {
          "$ref": "#/definitions/translated"
        }
      ]
    },
    "stringOrLabelAndText": {
      "oneOf": [
        {
          "$ref": "#/definitions/nonEmptyString"
        },
        {
          "type": "object",
          "properties": {
            "label": {
              "$ref": "#/definitions/nonEmptyString"
            },
            "text": {
              "$ref": "#/definitions/nonEmptyString"
            }
          }
        }
      ]
    },
    "numberInPixel": {
      "type": "number",
      "minimum": 0,
      "exclusiveMinimum": true,
      "description": "in px"
    },
    "numberInBytes": {
      "type": "number",
      "minimum": 0,
      "exclusiveMinimum": true,
      "description": "in bytes"
    }
  }
}
